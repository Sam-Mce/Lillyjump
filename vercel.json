{
    "version": 2,
    "builds": [
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "*.js",
            "use": "@vercel/static"
        },
        {
            "src": "*.css",
            "use": "@vercel/static"
        },
        {
            "src": "*.jpg",
            "use": "@vercel/static"
        },
        {
            "src": "*.mp3",
            "use": "@vercel/static"
        },
        {
            "src": "data/*.json",
            "use": "@vercel/static"
        },
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/leaderboard",
            "methods": ["GET", "OPTIONS"],
            "dest": "/api/leaderboard.js"
        },
        {
            "src": "/api/score",
            "methods": ["POST", "OPTIONS"],
            "dest": "/api/leaderboard.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
} 